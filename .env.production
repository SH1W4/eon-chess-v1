# AEON Chess - Production Environment Variables

# Application
NODE_ENV=production
APP_NAME=AEON Chess
APP_VERSION=0.2.1
APP_URL=https://aeon-chess.local

# Backend API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_RELOAD=false
API_CORS_ORIGINS=https://aeon-chess.local,http://localhost:3000

# Database
DATABASE_URL=postgresql://aeon_user:aeon_secure_pass_2025@postgres:5432/aeon_chess
DB_POOL_SIZE=10
DB_POOL_OVERFLOW=5
DB_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_DECODE_RESPONSES=true

# Security
SECRET_KEY=aeon-chess-secret-key-production-2025-secure
JWT_SECRET_KEY=aeon-jwt-secret-production-2025
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# AI Configuration
AI_MAX_DEPTH=6
AI_TIME_LIMIT=30
AI_USE_OPENING_BOOK=true
AI_USE_ENDGAME_DB=true

# Cultural System
CULTURAL_CACHE_TTL=3600
CULTURAL_ANALYSIS_ENABLED=true

# Narrative System
NARRATIVE_CACHE_TTL=1800
NARRATIVE_GENERATION_ENABLED=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info
LOG_FORMAT=json

# Frontend
REACT_APP_API_URL=https://aeon-chess.local/api
REACT_APP_WS_URL=wss://aeon-chess.local/ws
REACT_APP_ENABLE_ANALYTICS=false

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/certs/aeon-chess.local.pem
SSL_KEY_PATH=/etc/nginx/certs/aeon-chess.local-key.pem

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
MAX_REQUEST_SIZE=10M

# Feature Flags
ENABLE_MULTIPLAYER=false
ENABLE_TOURNAMENTS=false
ENABLE_SOCIAL_FEATURES=false
ENABLE_ARKITECT_INTEGRATION=true
