@startuml Quantum Flow

' Estilos
!define QUANTUM_COLOR #4B0082
!define CLASSICAL_COLOR #1B1B1B
!define HYBRID_COLOR #4A0042

skinparam activity {
    BackgroundColor QUANTUM_COLOR
    BorderColor White
    FontColor White
}

' Título
title AEON Chess - Fluxo Quântico

' Start
start

' Fluxo principal
:Inicializar Campo Quântico;

partition "Processamento Clássico" {
    :Receber Estado do Tabuleiro;
    :Mapear Peças e Posições;
}

partition "Superposição Quântica" {
    fork
        :Calcular Campo de Influência;
    fork again
        :Avaliar Estados Possíveis;
    fork again
        :Computar Entrelaçamento;
    end fork
}

partition "Análise Híbrida" {
    :Combinar Resultados;
    :Calcular Probabilidades;
    if (Colapso Necessário?) then (sim)
        :Realizar Medição;
    else (não)
        :Manter Superposição;
    endif
}

partition "Integração com IA" {
    fork
        :Alimentar Sistema Adaptativo;
    fork again
        :Atualizar Padrões Quânticos;
    end fork
}

:Retornar Análise Final;

stop

@enduml
